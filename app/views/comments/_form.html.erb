<%= form_with model:[@current_user, @post, Comment.new], url:user_post_comments_path(@current_user, @post) do |form| %>

    <div class="comment_form">

      <div>

        <%= form.label :comment%><br>

        <%= form.text_area :text, class:'comment_input' %>


      </div>

      <br>

      <%= form.submit class:'post_button' %>

    </div>

<%end%>